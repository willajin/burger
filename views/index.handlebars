<div class="container">

    <h1>Eat-Da-Burger!</h1>

    <div class="row">
        <div class="col s6">
            <h3>Undevoured Burgers</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li class="burgerList">{{this.id}} : {{this.burger_name}}</li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col s6">
            <h3>Devoured Burgers</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li class="burgerList">{{this.id}} : {{ this.burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <form class="add-form">
        <div class="row">
            <div class="col s12">
                Add a Burger:
                <div class="input-field inline">
                    <input id="newBurger" type="text">
                </div>
            </div>
        </div>
        <button id="addButton" class="btn waves-effect waves-light grey" type="submit" name="action">Add Burger</button>
    </form>

</div>